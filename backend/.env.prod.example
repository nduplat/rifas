# Production / Staging environment file (PLACEHOLDERS)
# Copiar a .env.prod en el servidor y reemplazar valores reales.
# IMPORTANTE: NO commitear .env.prod al repo.

# Database
POSTGRES_DB=rifa1122_prod
POSTGRES_USER=rifa_user_prod
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_DB_PASSWORD

# Application
SECRET_KEY=REPLACE_WITH_256_BIT_SECRET
ENV=production
LOG_LEVEL=INFO

# External services
REDIS_URL=redis://redis:6379/0
SENTRY_DSN=

# Stripe (opcional)
STRIPE_SECRET_KEY=sk_test_replace_me
STRIPE_PUBLISHABLE_KEY=pk_test_replace_me

# Runtime / deployment
HOST_PORT=8000
IMAGE=ghcr.io/yourusername/rifa1122:latest
WORKER_CONCURRENCY=2

# Reverse proxy / TLS (local placeholders â€” provide actual certs on server)
TLS_CERT_PATH=/etc/nginx/certs/fullchain.pem
TLS_KEY_PATH=/etc/nginx/certs/privkey.pem